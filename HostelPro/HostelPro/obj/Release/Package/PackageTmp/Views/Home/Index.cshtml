<script>
    function login() {
        $('#pop-up').css("display", "block");
        var window = $("#pop-up"),
        undo = $(".li-a")
                .bind("click", function () {
                    window.data("kendoWindow").open();
                    undo.hide();
                });

        var onClose = function () {
            undo.show();

        }

        if (!window.data("kendoWindow")) {
            window.kendoWindow({
                width: "15%",
                title: "LogIn",
                actions: [
                    "Pin",
                    "Minimize",
                    "Maximize",
                    "Close"
                ],
                position: {

                    top: 58,
                    left: 735
                },
                close: onClose
            });
        }



    }
    $("#MyPage").click(login)

</script>
